<UserControl x:Class="UserInterfaceGravityPanel.View.OrderView"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        mc:Ignorable="d ignore"
        xmlns:props="clr-namespace:UserInterfaceGravityPanel.Properties"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase" d:DesignWidth="758.959" d:DesignHeight="330.13">

    <Grid HorizontalAlignment="Left">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!-- column 0 -->
        <Label  Grid.Row="0" Grid.Column="0"
                Content="{x:Static props:Resources.CurrentOrder}" 
                HorizontalAlignment="Left" VerticalAlignment="Center"
                FontSize="{StaticResource LargeFontSize}" FontWeight="Bold" Foreground="{StaticResource ResourceKey=Text1}"/>
        <Label  Grid.Row="1" Grid.Column="0" Margin="50,0,0,0"
                Content="{x:Static props:Resources.OrderID}" 
                HorizontalAlignment="Left" VerticalAlignment="Center"
                FontSize="{StaticResource MidFontSize}" FontWeight="Bold" Foreground="{StaticResource ResourceKey=Text1}"/>
        <Label  Grid.Row="2" Grid.Column="0" Margin="50,0,0,0"
                Content="{x:Static props:Resources.SubOrderID}" 
                HorizontalAlignment="Left" VerticalAlignment="Center"
                FontSize="{StaticResource MidFontSize}" FontWeight="Bold" Foreground="{StaticResource ResourceKey=Text1}"/>
        <!-- column 2 -->
        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal">
            <Label  
                Content="{Binding ERPID}" 
                HorizontalAlignment="Left" VerticalAlignment="Center"
                FontSize="{StaticResource MidFontSize}" FontWeight="Bold" Foreground="{StaticResource ResourceKey=Text1}"/>
            <Label  
                Content="{Binding OrderID}" 
                HorizontalAlignment="Left" VerticalAlignment="Center"
                FontSize="{StaticResource MidFontSize}" FontWeight="Bold" Foreground="{StaticResource ResourceKey=Text1}"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal">
            <Label  
                Content="{Binding SubOrder}" 
                HorizontalAlignment="Left" VerticalAlignment="Center"
                FontSize="{StaticResource MidFontSize}" FontWeight="Bold" Foreground="{StaticResource ResourceKey=Text1}"/>
            <Label  
                Content="{Binding SubOrderName}" 
                HorizontalAlignment="Left" VerticalAlignment="Center"
                FontSize="{StaticResource MidFontSize}" FontWeight="Bold" Foreground="{StaticResource ResourceKey=Text1}"/>
        </StackPanel>
        <!-- column 4 -->
        <Label  Grid.Row="1" Grid.Column="4"
                Content="{x:Static props:Resources.Status}" 
                HorizontalAlignment="Left" VerticalAlignment="Center"
                FontSize="{StaticResource MidFontSize}" FontWeight="Bold" Foreground="{StaticResource ResourceKey=Text1}"/>
        <Label  Grid.Row="2" Grid.Column="4"
                Content="{x:Static props:Resources.Status}" 
                HorizontalAlignment="Left" VerticalAlignment="Center"
                FontSize="{StaticResource MidFontSize}" FontWeight="Bold" Foreground="{StaticResource ResourceKey=Text1}"/>
        <!-- column 6 -->
        <StackPanel Grid.Row="1" Grid.Column="6" Orientation="Horizontal">
            <Label  
                Content="{Binding StatusOrder}" 
                HorizontalAlignment="Left" VerticalAlignment="Center"
                FontSize="{StaticResource MidFontSize}" FontWeight="Bold" Foreground="{StaticResource ResourceKey=Text1}"/>
            <Label  
                Content="{Binding PortionSubOrder}" 
                HorizontalAlignment="Left" VerticalAlignment="Center"
                FontSize="{StaticResource MidFontSize}" FontWeight="Bold" Foreground="{StaticResource ResourceKey=Text1}"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="6" Orientation="Horizontal">
            <Label
                Content="{Binding StatusSubOrder}" 
                HorizontalAlignment="Left" VerticalAlignment="Center"
                FontSize="{StaticResource MidFontSize}" FontWeight="Bold" Foreground="{StaticResource ResourceKey=Text1}"/>
            <Label
                Content="{Binding PortionCommand}" 
                HorizontalAlignment="Left" VerticalAlignment="Center"
                FontSize="{StaticResource MidFontSize}" FontWeight="Bold" Foreground="{StaticResource ResourceKey=Text1}"/>
        </StackPanel>
    </Grid>

</UserControl>
